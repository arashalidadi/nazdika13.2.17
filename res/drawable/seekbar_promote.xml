<?xml version="1.0" encoding="utf-8"?>
<layer-list
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:gravity="fill_horizontal|center" android:id="@android:id/background">
        <shape android:tint="@color/progress_bar_bg" android:shape="rectangle">
            <corners android:radius="5.0dip" />
            <size android:height="12.0dip" />
            <solid android:color="@color/progress_bar_bg" />
        </shape>
    </item>
    <item android:gravity="fill_horizontal|center" android:id="@android:id/progress">
        <scale android:scaleWidth="100%">
            <selector>
                <item android:state_enabled="false" android:drawable="@android:color/transparent" />
                <item>
                    <shape android:tint="@color/redIcon" android:shape="rectangle">
                        <corners android:radius="5.0dip" />
                        <size android:height="12.0dip" />
                        <solid android:color="@color/redIcon" />
                    </shape>
                </item>
            </selector>
        </scale>
    </item>
</layer-list>